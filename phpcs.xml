<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="ganzgraph">
    <description>
        ganzgraph GmbH PHP Code Style
    </description>

    <exclude-pattern>*/Resources/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/.typo3/*</exclude-pattern>
    <exclude-pattern>*/Logs/*</exclude-pattern>
    <exclude-pattern>*/*.js</exclude-pattern>

    <rule ref="PSR2">
        <exclude name="PSR2.Classes.ClassDeclaration.OpenBraceNewLine" />
        <exclude name="Squiz.Functions.MultiLineFunctionDeclaration.BraceOnSameLine" />
    </rule>

    <rule ref="Generic.Classes.OpeningBraceSameLine" />
    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie" />

    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />

    <rule ref="Generic.Strings.UnnecessaryStringConcat" />

    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter" />
    <rule ref="Generic.CodeAnalysis.UnconditionalIfStatement" />

    <rule ref="ImportDetection">
        <exclude-pattern>*/Configuration/TCA/*</exclude-pattern>
        <exclude-pattern>ext_*.php</exclude-pattern>
    </rule>

    <rule ref="VariableAnalysis">
        <exclude-pattern>*/Configuration/TCA/*</exclude-pattern>
        <exclude-pattern>ext_*.php</exclude-pattern>

        <properties>
            <property name="allowUnusedFunctionParameters" value="true" />
            <property name="allowUnusedCaughtExceptions" value="true" />
        </properties>
    </rule>

    <rule ref="Squiz.Commenting.ClassComment">
        <exclude-pattern>*/Tests/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FunctionComment">
        <exclude-pattern>*/Tests/*</exclude-pattern>
    </rule>
</ruleset>
