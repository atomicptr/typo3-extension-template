{
    "name": "atomicptr/typo3-extension-template",
    "description": "Because it is easier this way...",
    "type": "typo3-cms-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher Kaster",
            "email": "me@atomicptr.de"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "typo3/minimal": "^9.5"
    },
    "require-dev": {
        "typo3/testing-framework": "^4.11",
        "squizlabs/php_codesniffer": "^3.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "sirbrillig/phpcs-import-detection": "^1.1",
        "sirbrillig/phpcs-variable-analysis": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Atomicptr\\Typo3ExtensionTemplate\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atomicptr\\Typo3ExtensionTemplate\\Tests\\": "Tests"
        }
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".typo3/app",
            "web-dir": ".typo3/web"
        }
    },
    "scripts": {
        "test": "phpunit -c Tests/UnitTests.xml --bootstrap vendor/typo3/testing-framework/Resources/Core/Build/UnitTestsBootstrap.php",
        "lint": "phpcs Classes Configuration/TCA ext_*.php",
        "gendoc": "~/.config/composer/vendor/bin/phpdoc -d ./Classes/ -t ./Documentation"
    }
}
